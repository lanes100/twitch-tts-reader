# Copy to `.env` and fill in values. Secrets are placeholders.

# Twitch identity
TWITCH_USERNAME=
TWITCH_CHANNEL=

# OAuth (Authorization Code flow). `auth.js` can populate these when WRITE_ENV_FILE=true
TWITCH_OAUTH=
TWITCH_REFRESH_TOKEN=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_SCOPES=chat:read chat:edit channel:read:redemptions
TWITCH_REDIRECT_URL=http://localhost:5173/callback

# TTS
TTS_ENDPOINT=https://tiktok-tts.weilnet.workers.dev
TTS_VOICE=en_male_narration
BYTE_LIMIT=300
READ_COMMANDS=false
SELF_READ=false

# Security/ops
# Set to 'false' to avoid writing tokens to .env during auth/refresh
WRITE_ENV_FILE=true

# Tools (optional)
TTS_TEST_TEXT=Testing voice
TTS_TEST_TIMEOUT_MS=15000

# (Electron users can manage config in the app; .env is mainly for CLI)
